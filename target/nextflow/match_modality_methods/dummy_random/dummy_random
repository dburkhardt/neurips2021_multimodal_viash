}

# find source folder of this component
VIASH_RESOURCES_DIR=`ViashSourceDir ${BASH_SOURCE[0]}`


# ViashHelp: Display helpful explanation about this executable
function ViashHelp {
  echo "dummy_random 0.4.0"
  echo "A baseline method for comparing modality matching methods against. Outputs a random matrix with a single non-zero per row."
  echo
  echo "Options:"

  echo "   -i1, --input_mod1"
  echo "        type: file, required parameter"
  echo "        example: dataset.h5ad"
  echo "        First modality of censored dataset."
  echo ""


  echo "   -i2, --input_mod2"
  echo "        type: file, required parameter"
  echo "        example: dataset.h5ad"
  echo "        Second modality of censored dataset."
  echo ""


  echo "   -o, --output"
  echo "        type: file, required parameter, output"
  echo "        example: output_rna.csv"
  echo "        Dataset with predicted values for modality2."
  echo ""

}

# initialise array
VIASH_POSITIONAL_ARGS=''

while [[ $# -gt 0 ]]; do
    case "$1" in
        -h|--help)
            ViashHelp
            exit
            ;;
        -v|--verbose)
            let "VIASH_VERBOSITY=VIASH_VERBOSITY+1"
            shift 1
            ;;
        -vv)
            let "VIASH_VERBOSITY=VIASH_VERBOSITY+2"
            shift 1
            ;;
        --verbosity)
            VIASH_VERBOSITY="$2"
            shift 2
            ;;
        --verbosity=*)
            VIASH_VERBOSITY="$(ViashRemoveFlags "$1")"
            shift 1
            ;;
        --version)
            echo "dummy_random 0.4.0"
            exit
            ;;
        --input_mod1)
            VIASH_PAR_INPUT_MOD1="$2"
            shift 2
            ;;
        --input_mod1=*)
            VIASH_PAR_INPUT_MOD1=$(ViashRemoveFlags "$1")
            shift 1
            ;;
        -i1)
            VIASH_PAR_INPUT_MOD1="$2"
            shift 2
            ;;
        --input_mod2)
            VIASH_PAR_INPUT_MOD2="$2"
            shift 2
            ;;
        --input_mod2=*)
            VIASH_PAR_INPUT_MOD2=$(ViashRemoveFlags "$1")
            shift 1
            ;;
        -i2)
            VIASH_PAR_INPUT_MOD2="$2"
            shift 2
            ;;
        --output)
            VIASH_PAR_OUTPUT="$2"
            shift 2
            ;;
        --output=*)
            VIASH_PAR_OUTPUT=$(ViashRemoveFlags "$1")
            shift 1
            ;;
        -o)
            VIASH_PAR_OUTPUT="$2"
            shift 2
            ;;
        *)  # positional arg or unknown option
            # since the positional args will be eval'd, can we always quote, instead of using ViashQuote
            VIASH_POSITIONAL_ARGS="$VIASH_POSITIONAL_ARGS '$1'"
            shift # past argument
            ;;
    esac
done

# parse positional parameters
eval set -- $VIASH_POSITIONAL_ARGS



# check whether required parameters exist
if [ -z "$VIASH_PAR_INPUT_MOD1" ]; then
  ViashError '--input_mod1' is a required argument. Use "--help" to get more information on the parameters.
  exit 1
fi
if [ -z "$VIASH_PAR_INPUT_MOD2" ]; then
  ViashError '--input_mod2' is a required argument. Use "--help" to get more information on the parameters.
  exit 1
fi
if [ -z "$VIASH_PAR_OUTPUT" ]; then
  ViashError '--output' is a required argument. Use "--help" to get more information on the parameters.
  exit 1
fi



cat << VIASHEOF | bash
set -e
tempscript=\$(mktemp "$VIASH_TEMP/viash-run-dummy_random-XXXXXX")
function clean_up {
  rm "\$tempscript"
}
trap clean_up EXIT
cat > "\$tempscript" << 'VIASHMAIN'
import anndata
import numpy as np

# VIASH START
# The following code has been auto-generated by Viash.
par = {
  'input_mod1': $( if [ ! -z ${VIASH_PAR_INPUT_MOD1+x} ]; then echo "'$VIASH_PAR_INPUT_MOD1'"; else echo None; fi ),
  'input_mod2': $( if [ ! -z ${VIASH_PAR_INPUT_MOD2+x} ]; then echo "'$VIASH_PAR_INPUT_MOD2'"; else echo None; fi ),
  'output': $( if [ ! -z ${VIASH_PAR_OUTPUT+x} ]; then echo "'$VIASH_PAR_OUTPUT'"; else echo None; fi )
}

resources_dir = '$VIASH_RESOURCES_DIR'

# VIASH END

# load dataset to be censored
ad_mod1 = anndata.read_h5ad(par["input_mod1"])
ad_mod2 = anndata.read_h5ad(par["input_mod2"])

pairing_matrix = np.zeros((ad_mod1.n_obs, ad_mod2.n_obs))
indices = np.random.randint(ad_mod2.n_obs, size=ad_mod1.n_obs)
pairing_matrix[np.arange(ad_mod1.n_obs), indices] = 1

# Write out prediction
prediction = anndata.AnnData(
    X=pairing_matrix,
    uns={
        "method_id": "dummy_random",
        "dataset_id": ad_mod1.uns["dataset_id"]
    }
)
prediction.write_h5ad(par["output"])
VIASHMAIN
PATH="$VIASH_RESOURCES_DIR:\$PATH"

python "\$tempscript"

VIASHEOF
