  echo ""


  echo "   --output_mod1"
  echo "        type: file, required parameter, output"
  echo "        example: dataset_mod1.h5ad"
  echo "        Mod1 h5ad file for both train and test cells."
  echo ""


  echo "   --output_mod2"
  echo "        type: file, required parameter, output"
  echo "        example: dataset_mod2.h5ad"
  echo "        Mod2 h5ad file for only the train cells."
  echo ""


  echo "   --output_solution"
  echo "        type: file, required parameter, output"
  echo "        example: dataset_solution.h5ad"
  echo "        Mod2 h5ad file for only the test cells."
  echo ""


  echo "   --seed"
  echo "        type: integer"
  echo "        The seed for determining the train/test split."
  echo ""


  echo "   --max_mod1_columns"
  echo "        type: integer"
  echo "        The maximum number of columns in mod1."
  echo ""


  echo "   --max_mod2_columns"
  echo "        type: integer"
  echo "        The maximum number of columns in mod2."
  echo ""

}

# initialise array
VIASH_POSITIONAL_ARGS=''

while [[ $# -gt 0 ]]; do
    case "$1" in
        -h|--help)
            ViashHelp
            exit
            ;;
        -v|--verbose)
            let "VIASH_VERBOSITY=VIASH_VERBOSITY+1"
            shift 1
            ;;
        -vv)
            let "VIASH_VERBOSITY=VIASH_VERBOSITY+2"
            shift 1
            ;;
        --verbosity)
            VIASH_VERBOSITY="$2"
            shift 2
            ;;
        --verbosity=*)
            VIASH_VERBOSITY="$(ViashRemoveFlags "$1")"
            shift 1
            ;;
        --version)
            echo "censor_dataset 0.4.0"
            exit
            ;;
        --input_mod1)
            VIASH_PAR_INPUT_MOD1="$2"
            shift 2
            ;;
        --input_mod1=*)
            VIASH_PAR_INPUT_MOD1=$(ViashRemoveFlags "$1")
            shift 1
            ;;
        --input_mod2)
            VIASH_PAR_INPUT_MOD2="$2"
            shift 2
            ;;
        --input_mod2=*)
            VIASH_PAR_INPUT_MOD2=$(ViashRemoveFlags "$1")
            shift 1
            ;;
        --output_mod1)
            VIASH_PAR_OUTPUT_MOD1="$2"
            shift 2
            ;;
        --output_mod1=*)
            VIASH_PAR_OUTPUT_MOD1=$(ViashRemoveFlags "$1")
            shift 1
            ;;
        --output_mod2)
            VIASH_PAR_OUTPUT_MOD2="$2"
            shift 2
            ;;
        --output_mod2=*)
            VIASH_PAR_OUTPUT_MOD2=$(ViashRemoveFlags "$1")
            shift 1
            ;;
        --output_solution)
            VIASH_PAR_OUTPUT_SOLUTION="$2"
            shift 2
            ;;
        --output_solution=*)
            VIASH_PAR_OUTPUT_SOLUTION=$(ViashRemoveFlags "$1")
            shift 1
            ;;
        --seed)
            VIASH_PAR_SEED="$2"
            shift 2
            ;;
        --seed=*)
            VIASH_PAR_SEED=$(ViashRemoveFlags "$1")
            shift 1
            ;;
        --max_mod1_columns)
            VIASH_PAR_MAX_MOD1_COLUMNS="$2"
            shift 2
            ;;
        --max_mod1_columns=*)
            VIASH_PAR_MAX_MOD1_COLUMNS=$(ViashRemoveFlags "$1")
            shift 1
            ;;
        --max_mod2_columns)
            VIASH_PAR_MAX_MOD2_COLUMNS="$2"
            shift 2
            ;;
        --max_mod2_columns=*)
            VIASH_PAR_MAX_MOD2_COLUMNS=$(ViashRemoveFlags "$1")
            shift 1
            ;;
        *)  # positional arg or unknown option
            # since the positional args will be eval'd, can we always quote, instead of using ViashQuote
            VIASH_POSITIONAL_ARGS="$VIASH_POSITIONAL_ARGS '$1'"
            shift # past argument
            ;;
    esac
