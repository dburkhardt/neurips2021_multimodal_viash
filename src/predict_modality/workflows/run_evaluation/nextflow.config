manifest {
  nextflowVersion = '!>=20.12.1-edge'
}

// ADAPT rootDir ACCORDING TO RELATIVE PATH WITHIN PROJECT
params {
  rootDir = "$projectDir/../../../.."
}

targetDir = "${params.rootDir}/target/nextflow"

// INSERT CUSTOM IMPORTS HERE
includeConfig "$targetDir/common_datasets/download_10x_dataset/nextflow.config"
includeConfig "$targetDir/common_datasets/dyngen/nextflow.config"
// includeConfig "$targetDir/predict_modality_datasets/prepare_task1_dataset/nextflow.config"
// includeConfig "$targetDir/predict_modality_methods/baseline_randomforest/nextflow.config"
// includeConfig "$targetDir/predict_modality_metrics/calculate_task1_metrics/nextflow.config"
// END INSERT

docker {
  runOptions = "-v \$(realpath --no-symlinks ${params.rootDir}):\$(realpath --no-symlinks ${params.rootDir})"
}

process {
  errorStrategy = 'ignore'
  container = 'nextflow/bash:latest'
}
